<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_journal_form_inherited" model="ir.ui.view">
        <field name="name">view.account.journal.form.inherited</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="l10n_do_accounting.view_account_journal_form"/>
        <field name="arch" type="xml">
            <group name="document_types" position="replace">
                <group name="l10n_do_sequence_ids" string="Fiscal Sequences">
                    <field name="l10n_do_sequence_ids" nolabel="1" colspan="2"
                           attrs="{'invisible': ['|', ('l10n_latam_use_documents', '=', False), ('country_code', '!=', 'DO')]}">
                        <tree create="false" delete="false" editable="top"
                              default_order="id">
                            <field name="name" readonly="True" string="Sequence"/>
                            <field name="number_next_actual" string="Next Number"/>
                            <field name="l10n_do_ncf_expiration_date"/>
                            <field name="id" invisible="1"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
